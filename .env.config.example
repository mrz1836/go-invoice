# go-invoice Configuration Example
# Copy this file to .env.config and customize for your business

# ============================================================================
# BUSINESS INFORMATION
# ============================================================================

# Required: Your business or personal name
BUSINESS_NAME="John Doe Consulting"

# Required: Your business address (use \n for line breaks if needed)
BUSINESS_ADDRESS="123 Main Street\nSuite 100\nNew York, NY 10001\nUnited States"

# Optional: Business phone number
BUSINESS_PHONE="+1-555-123-4567"

# Required: Business email address for invoicing
BUSINESS_EMAIL="billing@johndoe.com"

# Optional: Tax identification number
BUSINESS_TAX_ID="12-3456789"

# Optional: VAT identification number (for EU businesses)
BUSINESS_VAT_ID="US123456789"

# Optional: Business website
BUSINESS_WEBSITE="https://johndoe.com"

# Required: Default payment terms for invoices
PAYMENT_TERMS="Net 30"

# ============================================================================
# BANKING & PAYMENT INFORMATION
# ============================================================================

# Optional: Bank name
BANK_NAME="First National Bank"

# Optional: Bank account number (last 4 digits for security)
BANK_ACCOUNT="****4567"

# Optional: Bank routing number
BANK_ROUTING="123456789"

# Optional: International Bank Account Number (IBAN)
BANK_IBAN="US12BANK0000000012345678"

# Optional: SWIFT/BIC code for international transfers
BANK_SWIFT="FIRSTUS33"

# Optional: Custom payment instructions
PAYMENT_INSTRUCTIONS="Wire transfers preferred. Checks payable to John Doe Consulting."

# ============================================================================
# INVOICE SETTINGS
# ============================================================================

# Required: Invoice number prefix
INVOICE_PREFIX="JDC"

# Invoice starting number (default: 1000)
INVOICE_START_NUMBER=1000

# Optional: Footer text for invoices
INVOICE_FOOTER="Thank you for your business!"

# Required: Currency code (ISO 4217)
CURRENCY="USD"

# VAT/Tax rate as decimal (0.20 = 20%, 0.0 = no tax)
VAT_RATE=0.0

# Default number of days until invoice is due
INVOICE_DUE_DAYS=30

# ============================================================================
# STORAGE SETTINGS
# ============================================================================

# Optional: Custom data directory (default: ~/.go-invoice)
# DATA_DIR="/path/to/custom/invoice/data"

# Optional: Custom backup directory (default: DATA_DIR/backups)
# BACKUP_DIR="/path/to/backups"

# Number of days to retain old data (default: 365)
RETENTION_DAYS=365

# Enable automatic backups (default: false)
AUTO_BACKUP=true

# Backup interval in Go duration format (default: 24h)
BACKUP_INTERVAL=24h


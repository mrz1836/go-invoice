{
    "// NOTE": "This is a template. Copy to your project root as .claude_config.json",
    "mcp": {
        "servers": {
            "go-invoice": {
                "args": [
                    "--stdio",
                    "--config",
                    "./invoice-config.json"
                ],
                "command": "./bin/go-invoice-mcp",
                "env": {
                    "GO_INVOICE_PROJECT": "./",
                    "MCP_LOG_FILE": "./.go-invoice/mcp.log",
                    "MCP_TRANSPORT": "stdio"
                },
                "projectSettings": {
                    "autoImportPath": "./timesheets",
                    "defaultClient": "",
                    "invoicePrefix": "INV",
                    "outputPath": "./invoices",
                    "templatePath": "./templates/invoice.html"
                },
                "workingDirectory": "."
            }
        },
        "shortcuts": {
            "generate": {
                "description": "Generate invoice HTML",
                "server": "go-invoice",
                "tool": "generate_html"
            },
            "import": {
                "description": "Import timesheet",
                "server": "go-invoice",
                "tool": "import_csv"
            },
            "invoice": {
                "description": "Quick invoice creation",
                "server": "go-invoice",
                "tool": "invoice_create"
            }
        }
    },
    "workspace": {
        "invoices": {
            "autoOpen": true,
            "path": "./invoices",
            "watch": true
        },
        "templates": {
            "path": "./templates",
            "watch": false
        },
        "timesheets": {
            "path": "./timesheets",
            "patterns": [
                "*.csv",
                "*.xlsx"
            ],
            "watch": true
        }
    }
}

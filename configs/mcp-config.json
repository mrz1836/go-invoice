{
  "server": {
    "name": "go-invoice-mcp",
    "version": "1.0.0",
    "description": "MCP server for go-invoice CLI integration",
    "transport": {
      "autoDetect": true,
      "stdio": {
        "enabled": true,
        "bufferSize": 65536,
        "flushInterval": "100ms"
      },
      "http": {
        "enabled": true,
        "host": "127.0.0.1",
        "port": 0,
        "readTimeout": "30s",
        "writeTimeout": "30s",
        "maxBodySize": "10MB"
      }
    },
    "logging": {
      "level": "info",
      "format": "json",
      "outputs": [
        {
          "type": "file",
          "path": "~/.go-invoice/mcp-server.log",
          "maxSize": "10MB",
          "maxBackups": 3,
          "compress": true
        },
        {
          "type": "stderr",
          "enabled": false
        }
      ]
    },
    "health": {
      "enabled": true,
      "interval": "30s",
      "timeout": "5s",
      "checks": {
        "cli": true,
        "storage": true,
        "memory": true
      }
    }
  },
  "cli": {
    "path": "go-invoice",
    "workingDir": "~/.go-invoice",
    "maxTimeout": "60s",
    "environment": {
      "GO_INVOICE_HOME": "~/.go-invoice",
      "NO_COLOR": "false"
    }
  },
  "security": {
    "enabled": true,
    "sandbox": {
      "enabled": true,
      "allowedCommands": [
        "go-invoice",
        "invoice",
        "client",
        "import",
        "generate",
        "export",
        "config",
        "summary"
      ],
      "allowedPaths": [
        "~/.go-invoice",
        "~/Documents/invoices",
        "~/Downloads",
        "/tmp"
      ],
      "blockedPaths": [
        "/etc",
        "/sys",
        "/proc",
        "/dev",
        "/root",
        "/.."
      ],
      "maxFileSize": "50MB",
      "maxExecutionTime": "5m"
    },
    "validation": {
      "strictMode": true,
      "validatePaths": true,
      "validateCommands": true,
      "validateEnvironment": true
    },
    "audit": {
      "enabled": true,
      "logPath": "~/.go-invoice/audit.log",
      "logLevel": "info",
      "includeTimestamps": true,
      "includeUserInfo": true
    }
  },
  "tools": {
    "enabled": true,
    "categories": [
      "invoice_management",
      "client_management",
      "data_import",
      "document_generation",
      "configuration"
    ],
    "validation": {
      "strict": true,
      "schemaVersion": "draft-07"
    },
    "defaults": {
      "timeout": "30s",
      "retries": 3,
      "retryDelay": "1s"
    }
  },
  "performance": {
    "caching": {
      "enabled": true,
      "ttl": "5m",
      "maxSize": "100MB"
    },
    "concurrency": {
      "maxConcurrentTools": 5,
      "queueSize": 100
    },
    "monitoring": {
      "enabled": true,
      "metricsInterval": "1m",
      "includeMemoryStats": true,
      "includeGoroutineStats": true
    }
  },
  "extensions": {
    "customTools": {
      "enabled": false,
      "path": "~/.go-invoice/custom-tools"
    },
    "plugins": {
      "enabled": false,
      "path": "~/.go-invoice/plugins"
    }
  }
}
{
    "globalShortcut": "Cmd+Shift+Space",
    "mcpServers": {
        "go-invoice": {
            "args": [
                "--config",
                "/path/to/your/go-invoice-config.json",
                "--data-dir",
                "/path/to/your/invoice-data",
                "--log-level",
                "info"
            ],
            "command": "/usr/local/bin/go-invoice-mcp",
            "env": {
                "GO_INVOICE_CONFIG_FILE": "/path/to/your/go-invoice-config.json",
                "GO_INVOICE_DATA_DIR": "/path/to/your/invoice-data",
                "GO_INVOICE_LOG_LEVEL": "info",
                "GO_INVOICE_TEMPLATES_DIR": "/path/to/your/templates"
            }
        }
    }
}

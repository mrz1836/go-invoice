# go-invoice Configuration Example
# Copy this file to .env in your project root and customize the values

# Business Information
BUSINESS_NAME=Freelance Developer LLC
BUSINESS_ADDRESS=123 Developer Street\nTech City, TC 12345\nUnited States
BUSINESS_EMAIL=billing@freelancedev.com
BUSINESS_PHONE=+1-555-DEV-CODE
BUSINESS_WEBSITE=https://freelancedev.com

# Banking Information (optional)
BANK_NAME=TechBank
BANK_ACCOUNT=****1234
BANK_ROUTING=021000021
PAYMENT_INSTRUCTIONS=Please remit payment within 30 days via bank transfer or check

# Invoice Settings
INVOICE_PREFIX=FD
INVOICE_START_NUMBER=2024001
CURRENCY=USD
VAT_RATE=0.08

# Payment Terms
PAYMENT_TERMS=Net 30 days. Late payments may incur a 1.5% monthly service charge.

# Storage Settings
DATA_DIR=./invoice-data
AUTO_BACKUP=true
RETENTION_DAYS=2555  # 7 years

# Template Settings (optional)
DEFAULT_TEMPLATE=templates/invoice/default.html
CUSTOM_TEMPLATE_DIR=./custom-templates

# Logging (optional)
LOG_LEVEL=INFO
LOG_FILE=./logs/go-invoice.log

# Development Settings (optional)
DEBUG=false
VERBOSE=false

# Integration Settings (optional)
# Uncomment and configure if using integrations

# Toggl Integration
# TOGGL_API_TOKEN=your_toggl_api_token
# TOGGL_WORKSPACE_ID=your_workspace_id

# Email Settings (for automatic invoice sending)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USERNAME=your_email@gmail.com
# SMTP_PASSWORD=your_app_password
# SMTP_FROM=billing@yourdomain.com

# Backup Settings
# BACKUP_ENABLED=true
# BACKUP_SCHEDULE=daily
# BACKUP_RETENTION_DAYS=90
# CLOUD_BACKUP_PROVIDER=dropbox  # dropbox, gdrive, s3

# Security Settings
# ENCRYPT_DATA=true
# ENCRYPTION_KEY=your_32_character_encryption_key

# API Settings (if using web interface)
# API_PORT=8080
# API_HOST=localhost
# JWT_SECRET=your_jwt_secret_key

# Webhook Settings (for payment notifications)
# WEBHOOK_URL=https://yourdomain.com/webhooks/payment
# WEBHOOK_SECRET=your_webhook_secret